const defaultBenefits: Benefit[] = [
  {
    icon: 'badge',
    title: 'Veteran Owned',
    description: 'Proudly serving our community with the same integrity and commitment we brought to our service.'
  },
  {
    icon: 'clock',
    title: 'Same-Day Service',
    description: 'When your HVAC breaks down, you can\'t wait. We offer same-day emergency repairs.'
  },
  {
    icon: 'shield',
    title: 'Licensed & Insured',
    description: 'Fully licensed technicians with comprehensive insurance for your peace of mind.'
  },
  {
    icon: 'dollar',
    title: 'Upfront Pricing',
    description: 'No surprises or hidden fees. You\'ll know the cost before any work begins.'
  },
  {
    icon: 'star',
    title: '5-Star Service',
    description: 'Consistently rated 5 stars by homeowners who trust us with their comfort.'
  },
  {
    icon: 'thermometer',
    title: 'Expert Technicians',
    description: 'Factory-trained technicians who can handle any heating or cooling challenge.'
  }
];

const {
  headline = 'Why Homeowners Trust Us',
  subheadline = 'We\'re not just another HVAC company. We\'re your neighbors, committed to keeping your home comfortable.',
  benefits = defaultBenefits
} = Astro.props;
---

<section class="py-16 sm:py-20" style="background-color: #f8fafc;">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto mb-12">
      <h2 class="font-heading text-3xl sm:text-4xl font-bold mb-4" style="color: #0f172a;">
        {headline}
      </h2>
      <p class="text-lg" style="color: #64748b;">
        {subheadline}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
      {benefits.map((benefit) => (
        <div class="bg-white rounded-xl p-6 transition-all duration-300 hover:-translate-y-1" style="box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);">
          <div class="w-12 h-12 rounded-lg flex items-center justify-center mb-4" style="background-color: #e0f2fe;">
            <svg class="w-6 h-6" fill="#0ea5e9" viewBox="0 0 20 20">
              <Fragment set:html={icons[benefit.icon]} />
            </svg>
          </div>
          <h3 class="font-heading font-semibold text-lg mb-2" style="color: #0f172a;">
            {benefit.title}
          </h3>
          <p class="text-sm leading-relaxed" style="color: #64748b;">
            {benefit.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
