---
interface Props {
  phone?: string;
}

const { phone = '(480) 000-0000' } = Astro.props;
const year = new Date().getFullYear();
---

<footer style="background: linear-gradient(135deg, #2C3590 0%, #000000 100%); color: #ffffff; padding: 3rem 0;">
  <div style="max-width: 1200px; margin: 0 auto; padding: 0 1.5rem;">
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 2rem; margin-bottom: 2rem;">
      <div>
        <picture>
          <source srcset="/logo-light.webp" type="image/webp" />
          <img src="/logo-light.png" alt="ASH Cooling & Heating" loading="lazy" decoding="async" width="158" height="50" style="height: 50px; width: auto; margin-bottom: 1rem;" />
        </picture>
        <p style="color: rgba(255,255,255,0.7); font-size: 0.875rem; line-height: 1.6;">
          Family-owned HVAC company serving Arizona homeowners with honest pricing and quality installations.
        </p>
      </div>

      <div>
        <h4 style="font-size: 1rem; margin-bottom: 1rem; text-transform: uppercase;">Contact</h4>
        <p style="color: rgba(255,255,255,0.7); font-size: 0.875rem;">
          <a href={`tel:${phone.replace(/\D/g, '')}`} style="color: rgba(255,255,255,0.7); text-decoration: none;">{phone}</a>
        </p>
        <p style="color: rgba(255,255,255,0.7); font-size: 0.875rem; margin-top: 0.5rem;">
          Serving the Greater Phoenix Area
        </p>
      </div>

      <div>
        <h4 style="font-size: 1rem; margin-bottom: 1rem; text-transform: uppercase;">Licensed & Insured</h4>
        <p style="color: rgba(255,255,255,0.7); font-size: 0.875rem;">
          ROC #356015<br />
          Licensed, Bonded & Insured<br />
          Trane Authorized Dealer
        </p>
      </div>
    </div>

    <div id="footer-terms" style="border-top: 1px solid rgba(255,255,255,0.2); padding-top: 1.5rem; text-align: center;">
      <p style="color: rgba(255,255,255,0.4); font-size: 0.6875rem; max-width: 600px; margin: 0 auto 1rem; line-height: 1.5;">
        *Price-beat guarantee applies to written quotes from licensed, insured HVAC contractors with a permanent business location. Must be for comparable equipment and scope. We reserve the right to verify all quotes.
      </p>
      <p style="color: rgba(255,255,255,0.5); font-size: 0.75rem;">
        &copy; {year} ASH Cooling & Heating. All rights reserved.
      </p>
    </div>
  </div>
</footer>
