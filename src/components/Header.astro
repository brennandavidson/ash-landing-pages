---
interface Props {
  phone?: string;
  variant?: 'light' | 'dark';
}

const {
  phone = '(480) 000-0000',
  variant = 'light'
} = Astro.props;

const bgColor = variant === 'dark' ? 'background: linear-gradient(135deg, #2C3590 0%, #000000 100%);' : 'background-color: #ffffff;';
const textColor = variant === 'dark' ? '#ffffff' : '#1a1a1a';
const logo = variant === 'dark' ? '/logo-light.png' : '/logo-dark.png';
---

<header style={bgColor}>
  <div style="max-width: 1200px; margin: 0 auto; padding: 0 1.5rem;">
    <div style="display: flex; align-items: center; justify-content: space-between; height: 80px;">
      <a href="/">
        <img
          src={logo}
          alt="ASH Cooling & Heating"
          style="height: 50px; width: auto;"
        />
      </a>

      <a
        href={`tel:${phone.replace(/\D/g, '')}`}
        style={`display: flex; align-items: center; gap: 0.5rem; color: ${textColor}; text-decoration: none; font-weight: 600;`}
      >
        <svg style="width: 20px; height: 20px;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        <span>{phone}</span>
      </a>
    </div>
  </div>
</header>
