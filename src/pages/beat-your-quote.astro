  <script>
    const form = document.getElementById('quote-form');
    const submitBtn = document.getElementById('submit-btn');
    const formSuccess = document.getElementById('form-success');

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();

      // Disable button and show loading state
      submitBtn.disabled = true;
      submitBtn.textContent = 'Submitting...';
      submitBtn.style.opacity = '0.7';

      // Gather form data
      const formData = new FormData(form);
      const data = {};

      formData.forEach((value, key) => {
        // Skip the terms checkbox if not checked (won't be in FormData anyway if unchecked)
        if (key === 'terms_and_conditions') {
          data[key] = 'I Agree';
        } else {
          data[key] = value;
        }
      });

      // Add attribution data if available
      if (window.ashAttribution) {
        const attr = window.ashAttribution.getForForm();
        Object.assign(data, attr);
      }

      try {
        const response = await fetch('https://services.leadconnectorhq.com/hooks/dGHA224kB5WE4OS1KLqw/webhook-trigger/847113cf-e966-43b5-8d23-12f67951d14a', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        });

        if (response.ok) {
          // Show success message
          form.style.display = 'none';
          formSuccess.style.display = 'block';
        } else {
          throw new Error('Submission failed');
        }
      } catch (error) {
        console.error('Form submission error:', error);
        alert('Something went wrong. Please try again or call us directly.');
        submitBtn.disabled = false;
        submitBtn.textContent = 'GET MY BETTER PRICE →';
        submitBtn.style.opacity = '1';
      }
    });

    // Add focus styles to inputs
