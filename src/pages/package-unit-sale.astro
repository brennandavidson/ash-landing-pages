---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import AttributionScript from '../components/AttributionScript.astro';

const phone = '(480) 536-4465';
---

<Layout
  title="$1,400 Off 5-Ton Package Units | ASH Cooling & Heating"
  description="Brand new RunTru by Trane. As low as $8,997 out the door. Installed. Full warranty. No hidden fees."
>
  <AttributionScript slot="head" />

  <Header phone={phone} variant="light" />

  <main>
    <!-- HERO -->
    <section style="background: linear-gradient(180deg, #ffffff 0%, #f5f5f5 100%); padding: 3rem 0 4rem; position: relative; overflow: hidden;">
      <div style="max-width: 1200px; margin: 0 auto; padding: 0 1.5rem; position: relative;">
        <div class="hero-content" style="max-width: 800px; margin: 0 auto; text-align: center;">
          <!-- Urgency Badge -->
          <div style="display: inline-block; background: #fef2f2; border: 1px solid #E42F3A; color: #E42F3A; padding: 0.5rem 1rem; border-radius: 50px; font-size: 0.875rem; font-weight: 600; margin-bottom: 1.5rem;">
            Limited inventory. While supplies last.
          </div>

          <h1 style="font-size: clamp(2.5rem, 6vw, 4rem); color: #1a1a1a; margin-bottom: 1rem; line-height: 1.05;">
            $1,400 Off 5-Ton<br /><span style="color: #E42F3A;">Package Units.</span>
          </h1>
          <p style="font-size: 1.25rem; color: #444; margin-bottom: 2rem; line-height: 1.6; max-width: 600px; margin-left: auto; margin-right: auto;">
            Brand new RunTru by Trane. As low as <strong style="color: #1a1a1a;">$8,997 out the door.</strong> Installed. Full warranty. No hidden fees.
          </p>

          <a
            href="#form"
            style="display: inline-block; background-color: #E42F3A; color: #ffffff; padding: 1.125rem 2.5rem; font-size: 1.25rem; font-weight: 700; text-decoration: none; border-radius: 4px; box-shadow: 0 4px 15px rgba(228,47,58,0.3); transition: all 0.2s;"
            onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 6px 20px rgba(228,47,58,0.4)';"
            onmouseout="this.style.transform='none'; this.style.boxShadow='0 4px 15px rgba(228,47,58,0.3)';"
          >
            Claim This Deal →
          </a>
        </div>
      </div>
    </section>

    <!-- TRUST BAR -->
    <section style="background: linear-gradient(135deg, #2C3590 0%, #1a1a4e 100%); padding: 1.5rem 0; min-height: 76px;">
      <div style="max-width: 1100px; margin: 0 auto; padding: 0 1.5rem;">
        <div style="display: flex; flex-wrap: wrap; justify-content: center; align-items: center; gap: 2rem 3rem;">
          <div style="display: flex; align-items: center; gap: 0.75rem; color: #fff;">
            <svg style="width: 28px; height: 28px; color: #fff;" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
            <span style="font-weight: 600; font-size: 1rem;">Trane Authorized Dealer</span>
          </div>
          <div style="display: flex; align-items: center; gap: 0.75rem; color: #fff;">
            <svg style="width: 28px; height: 28px;" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
            <span style="font-weight: 600; font-size: 1rem;">ROC #356015</span>
          </div>
          <div style="display: flex; align-items: center; gap: 0.75rem; color: #fff;">
            <div style="display: flex; gap: 2px;">
              {[1,2,3,4,5].map(() => (
                <svg style="width: 20px; height: 20px; color: #fbbf24;" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" /></svg>
              ))}
            </div>
            <span style="font-weight: 600; font-size: 1rem;">80+ Five-Star Reviews</span>
          </div>
          <div style="display: flex; align-items: center; gap: 0.75rem; color: #fff;">
            <svg style="width: 28px; height: 28px; color: #E42F3A;" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" /></svg>
            <span style="font-weight: 600; font-size: 1rem;">Veteran & Family Owned</span>
          </div>
        </div>
      </div>
    </section>

    <!-- OFFER BREAKDOWN -->
    <section style="background-color: #ffffff; padding: 5rem 0;">
      <div style="max-width: 1000px; margin: 0 auto; padding: 0 1.5rem;">
        <h2 style="font-size: clamp(2rem, 5vw, 3rem); color: #1a1a1a; text-align: center; margin-bottom: 3rem;">
          Here's Exactly <span style="color: #E42F3A;">What You Get</span>
        </h2>

        <div class="offer-grid" style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 2rem;">
          <!-- The System -->
          <div style="background: #f9f9f9; padding: 2rem; border-radius: 12px; border-top: 4px solid #2C3590;">
            <h3 style="font-size: 1.25rem; color: #1a1a1a; margin-bottom: 1.25rem; text-transform: none; font-family: 'Inter', sans-serif; font-weight: 700;">The System</h3>
            <ul style="list-style: none; padding: 0; margin: 0; color: #555; font-size: 1rem; line-height: 1.8;">
              <li style="display: flex; align-items: flex-start; gap: 0.5rem;">
                <svg style="width: 20px; height: 20px; color: #22c55e; flex-shrink: 0; margin-top: 2px;" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
                RunTru by Trane 5-ton package unit
              </li>
              <li style="display: flex; align-items: flex-start; gap: 0.5rem;">
                <svg style="width: 20px; height: 20px; color: #22c55e; flex-shrink: 0; margin-top: 2px;" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
                Built by one of the most trusted names in HVAC
              </li>
              <li style="display: flex; align-items: flex-start; gap: 0.5rem;">
                <svg style="width: 20px; height: 20px; color: #22c55e; flex-shrink: 0; margin-top: 2px;" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
                Factory-backed warranty
              </li>
              <li style="display: flex; align-items: flex-start; gap: 0.5rem;">
                <svg style="width: 20px; height: 20px; color: #22c55e; flex-shrink: 0; margin-top: 2px;" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
                Designed for Arizona heat
              </li>
            </ul>
          </div>

          <!-- The Install -->
          <div style="background: #f9f9f9; padding: 2rem; border-radius: 12px; border-top: 4px solid #2C3590;">
            <h3 style="font-size: 1.25rem; color: #1a1a1a; margin-bottom: 1.25rem; text-transform: none; font-family: 'Inter', sans-serif; font-weight: 700;">The Install</h3>
            <ul style="list-style: none; padding: 0; margin: 0; color: #555; font-size: 1rem; line-height: 1.8;">
              <li style="display: flex; align-items: flex-start; gap: 0.5rem;">
                <svg style="width: 20px; height: 20px; color: #22c55e; flex-shrink: 0; margin-top: 2px;" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
                Licensed, background-checked technicians
              </li>
              <li style="display: flex; align-items: flex-start; gap: 0.5rem;">
                <svg style="width: 20px; height: 20px; color: #22c55e; flex-shrink: 0; margin-top: 2px;" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
                Permit pulled (where required)
              </li>
              <li style="display: flex; align-items: flex-start; gap: 0.5rem;">
                <svg style="width: 20px; height: 20px; color: #22c55e; flex-shrink: 0; margin-top: 2px;" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
                Old unit hauled away
              </li>
              <li style="display: flex; align-items: flex-start; gap: 0.5rem;">
                <svg style="width: 20px; height: 20px; color: #22c55e; flex-shrink: 0; margin-top: 2px;" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
                Thermostat included
              </li>
            </ul>
          </div>

          <!-- The Price -->
          <div style="background: #f9f9f9; padding: 2rem; border-radius: 12px; border-top: 4px solid #E42F3A;">
            <h3 style="font-size: 1.25rem; color: #1a1a1a; margin-bottom: 1.25rem; text-transform: none; font-family: 'Inter', sans-serif; font-weight: 700;">The Price</h3>
            <ul style="list-style: none; padding: 0; margin: 0; color: #555; font-size: 1rem; line-height: 1.8;">
              <li style="display: flex; align-items: flex-start; gap: 0.5rem;">
                <svg style="width: 20px; height: 20px; color: #22c55e; flex-shrink: 0; margin-top: 2px;" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
                <strong>As low as $8,997 out the door</strong>
              </li>
              <li style="display: flex; align-items: flex-start; gap: 0.5rem;">
                <svg style="width: 20px; height: 20px; color: #22c55e; flex-shrink: 0; margin-top: 2px;" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
                $1,400 off regular price
              </li>
              <li style="display: flex; align-items: flex-start; gap: 0.5rem;">
                <svg style="width: 20px; height: 20px; color: #22c55e; flex-shrink: 0; margin-top: 2px;" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
                No hidden fees. No "well actually" on install day.
              </li>
              <li style="display: flex; align-items: flex-start; gap: 0.5rem;">
                <svg style="width: 20px; height: 20px; color: #22c55e; flex-shrink: 0; margin-top: 2px;" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
                36 months 0% interest available
              </li>
            </ul>
          </div>
        </div>

        <div style="text-align: center; margin-top: 3rem;">
          <a
            href="#form"
            style="display: inline-block; background-color: #E42F3A; color: #ffffff; padding: 1rem 2.5rem; font-size: 1.125rem; font-weight: 700; text-decoration: none; border-radius: 4px; box-shadow: 0 4px 15px rgba(228,47,58,0.3); transition: all 0.2s;"
            onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 6px 20px rgba(228,47,58,0.4)';"
            onmouseout="this.style.transform='none'; this.style.boxShadow='0 4px 15px rgba(228,47,58,0.3)';"
          >
            Claim This Deal →
          </a>
        </div>
      </div>
    </section>

    <!-- WHY THIS DEAL EXISTS -->
    <section style="background: #f5f5f5; padding: 5rem 0;">
      <div style="max-width: 800px; margin: 0 auto; padding: 0 1.5rem;">
        <h2 style="font-size: clamp(2rem, 5vw, 3rem); color: #1a1a1a; text-align: center; margin-bottom: 2rem;">
          Why Are We <span style="color: #E42F3A;">Doing This?</span>
        </h2>

        <div style="background: #fff; padding: 2rem; border-radius: 12px; border-left: 4px solid #E42F3A;">
          <p style="color: #444; font-size: 1.125rem; line-height: 1.8; margin-bottom: 1.5rem;">
            <strong style="color: #1a1a1a;">Honest answer:</strong> we're booking installs before summer hits.
          </p>
          <p style="color: #444; font-size: 1.125rem; line-height: 1.8; margin-bottom: 1.5rem;">
            Every year the same thing happens. May rolls around, temps hit 100, and our phones explode. Everyone's AC dies at once. We're slammed. You're waiting weeks in the heat.
          </p>
          <p style="color: #444; font-size: 1.125rem; line-height: 1.8; margin-bottom: 0;">
            <strong style="color: #1a1a1a;">Book now, you get our best price. We get the install on the calendar before the chaos.</strong>
          </p>
        </div>

        <p style="text-align: center; color: #1a1a1a; font-size: 1.5rem; font-weight: 700; margin-top: 2rem; font-family: 'Anton', sans-serif; letter-spacing: 0.02em;">
          EVERYBODY WINS.
        </p>
      </div>
    </section>

    <!-- COMPARISON SECTION -->
    <section style="background-color: #ffffff; padding: 5rem 0;">
      <div style="max-width: 800px; margin: 0 auto; padding: 0 1.5rem;">
        <h2 style="font-size: clamp(2rem, 5vw, 3rem); color: #1a1a1a; text-align: center; margin-bottom: 1rem;">
          What The Big Guys <span style="color: #E42F3A;">Charge</span>
        </h2>
        <p style="color: #666; font-size: 1.125rem; text-align: center; margin-bottom: 3rem;">
          We pulled actual quotes from Arizona homeowners. Here's what the big HVAC companies are charging for similar 5-ton systems:
        </p>

        <div style="display: flex; flex-direction: column; gap: 1rem; margin-bottom: 2rem;">
          <div style="display: flex; justify-content: space-between; align-items: center; background: #fef2f2; padding: 1.25rem 1.5rem; border-radius: 8px;">
            <span style="color: #666; font-size: 1.125rem;">Company A</span>
            <span style="color: #E42F3A; font-size: 1.5rem; font-weight: 700;">$12,400</span>
          </div>
          <div style="display: flex; justify-content: space-between; align-items: center; background: #fef2f2; padding: 1.25rem 1.5rem; border-radius: 8px;">
            <span style="color: #666; font-size: 1.125rem;">Company B</span>
            <span style="color: #E42F3A; font-size: 1.5rem; font-weight: 700;">$13,800</span>
          </div>
          <div style="display: flex; justify-content: space-between; align-items: center; background: #fef2f2; padding: 1.25rem 1.5rem; border-radius: 8px;">
            <span style="color: #666; font-size: 1.125rem;">Company C</span>
            <span style="color: #E42F3A; font-size: 1.5rem; font-weight: 700;">$14,280</span>
          </div>
          <div style="display: flex; justify-content: space-between; align-items: center; background: linear-gradient(135deg, #2C3590 0%, #1a1a4e 100%); padding: 1.25rem 1.5rem; border-radius: 8px; border: 3px solid #22c55e;">
            <span style="color: #fff; font-size: 1.125rem; font-weight: 600;">ASH Cooling & Heating</span>
            <span style="color: #22c55e; font-size: 1.5rem; font-weight: 700;">$8,997</span>
          </div>
        </div>

        <p style="text-align: center; color: #444; font-size: 1.125rem;">
          <strong style="color: #1a1a1a;">Same caliber equipment. Same warranty. Thousands less.</strong>
        </p>

        <div style="text-align: center; margin-top: 2.5rem;">
          <a
            href="#form"
            style="display: inline-block; background-color: #E42F3A; color: #ffffff; padding: 1rem 2.5rem; font-size: 1.125rem; font-weight: 700; text-decoration: none; border-radius: 4px; box-shadow: 0 4px 15px rgba(228,47,58,0.3); transition: all 0.2s;"
            onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 6px 20px rgba(228,47,58,0.4)';"
            onmouseout="this.style.transform='none'; this.style.boxShadow='0 4px 15px rgba(228,47,58,0.3)';"
          >
            Claim This Deal →
          </a>
        </div>
      </div>
    </section>

    <!-- FORM SECTION -->
    <section id="form" style="background: #f5f5f5; padding: 5rem 0;">
      <div style="max-width: 500px; margin: 0 auto; padding: 0 1.5rem;">
        <div style="background:#fff;border-radius:12px;padding:2rem;box-shadow:0 4px 20px rgba(0,0,0,0.1);">
          <h2 style="font-size:1.75rem;color:#1a1a1a;text-align:center;margin-bottom:0.5rem;">CLAIM YOUR $1,400 OFF</h2>
          <p style="color:#666;text-align:center;margin-bottom:1.5rem;font-size:1rem;">Limited inventory available</p>

          <form id="quote-form" style="display:flex;flex-direction:column;gap:0.75rem;">
            <div>
              <input
                type="text"
                name="full_name"
                placeholder="Full Name *"
                required
                style="width:100%;padding:1rem;border:1px solid #e0e0e0;border-radius:8px;font-size:1rem;font-family:inherit;transition:border-color 0.2s;"
              />
            </div>

            <div>
              <input
                type="tel"
                name="phone"
                placeholder="Phone Number *"
                required
                style="width:100%;padding:1rem;border:1px solid #e0e0e0;border-radius:8px;font-size:1rem;font-family:inherit;transition:border-color 0.2s;"
              />
            </div>

            <div>
              <input
                type="email"
                name="email"
                placeholder="Email *"
                required
                style="width:100%;padding:1rem;border:1px solid #e0e0e0;border-radius:8px;font-size:1rem;font-family:inherit;transition:border-color 0.2s;"
              />
            </div>

            <div>
              <input
                type="text"
                name="address"
                placeholder="Address *"
                required
                style="width:100%;padding:1rem;border:1px solid #e0e0e0;border-radius:8px;font-size:1rem;font-family:inherit;transition:border-color 0.2s;"
              />
            </div>

            <div>
              <select
                name="system_age"
                required
                style="width:100%;padding:1rem;border:1px solid #e0e0e0;border-radius:8px;font-size:1rem;font-family:inherit;background:#fff;cursor:pointer;color:#666;transition:border-color 0.2s;"
              >
                <option value="" disabled selected>How old is your current system? *</option>
                <option value="0-5 years">0-5 years</option>
                <option value="5-10 years">5-10 years</option>
                <option value="10-15 years">10-15 years</option>
                <option value="15+ years">15+ years</option>
                <option value="Not sure">Not sure</option>
              </select>
            </div>

            <div>
              <select
                name="best_time_to_call"
                style="width:100%;padding:1rem;border:1px solid #e0e0e0;border-radius:8px;font-size:1rem;font-family:inherit;background:#fff;cursor:pointer;color:#666;transition:border-color 0.2s;"
              >
                <option value="" disabled selected>Best time to call?</option>
                <option value="Morning">Morning</option>
                <option value="Afternoon">Afternoon</option>
                <option value="Evening">Evening</option>
              </select>
            </div>

            <div style="display:flex;align-items:flex-start;gap:0.75rem;">
              <input
                type="checkbox"
                id="terms"
                name="terms_and_conditions"
                value="I Agree"
                required
