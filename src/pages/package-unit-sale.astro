---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import AttributionScript from '../components/AttributionScript.astro';

const phone = '(480) 536-4465';
---

<Layout
  title="$1,400 Off 5-Ton Package Units | ASH Cooling & Heating"
  description="Brand new RunTru by Trane. As low as $8,997 out the door. Installed. Full warranty. No hidden fees."
>
  <AttributionScript slot="head" />

  <Header phone={phone} variant="light" />

  <main>
    <!-- HERO - Split layout: content left, form right -->
    <section class="hero-section" style="background: linear-gradient(180deg, #ffffff 0%, #f5f5f5 100%); padding: 3rem 0 0; position: relative; overflow: hidden;">
      <div class="hero-grid" style="max-width: 1200px; margin: 0 auto; padding: 0 1.5rem; position: relative; display: grid; grid-template-columns: 1fr 480px; gap: 3rem; align-items: stretch;">
        <!-- Left: Content -->
        <div style="display: flex; flex-direction: column;">
          <!-- Urgency Badge -->
          <div style="display: inline-block; background: #fef2f2; border: 1px solid #E42F3A; color: #E42F3A; padding: 0.5rem 1rem; border-radius: 50px; font-size: 0.875rem; font-weight: 600; margin-bottom: 1.25rem;">
            ⚡ Limited inventory. While supplies last.
          </div>

          <h1 style="font-size: clamp(2.5rem, 5vw, 3.5rem); color: #1a1a1a; margin-bottom: 0.75rem; line-height: 1.05;">
            $1,400 Off 5-Ton<br /><span style="color: #E42F3A;">Package Units.</span>
          </h1>
          <p style="font-size: 1.25rem; color: #444; margin-bottom: 1.5rem; line-height: 1.5;">
            Brand new RunTru by Trane. As low as <strong style="color: #1a1a1a;">$8,997 out the door.</strong>
          </p>

          <!-- Bullets -->
          <ul style="list-style: none; padding: 0; margin: 0 0 1.5rem 0; display: flex; flex-direction: column; gap: 0.5rem;">
            <li style="display: flex; align-items: center; gap: 0.5rem; color: #333; font-size: 1rem;">
              <svg style="width: 20px; height: 20px; color: #22c55e; flex-shrink: 0;" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
              Installed in 1 day
            </li>
            <li style="display: flex; align-items: center; gap: 0.5rem; color: #333; font-size: 1rem;">
              <svg style="width: 20px; height: 20px; color: #22c55e; flex-shrink: 0;" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
              36 months 0% interest ($250/mo)
            </li>
            <li style="display: flex; align-items: center; gap: 0.5rem; color: #333; font-size: 1rem;">
              <svg style="width: 20px; height: 20px; color: #22c55e; flex-shrink: 0;" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
              Full factory warranty
            </li>
            <li style="display: flex; align-items: center; gap: 0.5rem; color: #333; font-size: 1rem;">
              <svg style="width: 20px; height: 20px; color: #22c55e; flex-shrink: 0;" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
              No hidden fees. Price is the price.
            </li>
            <li style="display: flex; align-items: center; gap: 0.5rem; color: #333; font-size: 1rem;">
              <svg style="width: 20px; height: 20px; color: #22c55e; flex-shrink: 0;" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
              Book now, skip the summer rush
            </li>
          </ul>

          <!-- Review Badges -->
          <div class="review-badges" style="display: flex; gap: 1rem; margin-top: 1.5rem; flex-wrap: wrap;">
            <!-- Google Badge -->
            <div style="display: flex; align-items: center; gap: 0.5rem; background: #fff; padding: 0.5rem 0.75rem; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.08);">
              <svg style="width: 20px; height: 20px;" viewBox="0 0 24 24"><path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/><path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/><path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/><path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/></svg>
              <div style="display: flex; gap: 1px;">
                {[1,2,3,4,5].map(() => (<svg style="width: 14px; height: 14px; color: #fbbf24;" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" /></svg>))}
              </div>
              <span style="font-size: 0.8125rem; font-weight: 600; color: #333;">5.0</span>
            </div>
            <!-- Facebook Badge -->
            <div style="display: flex; align-items: center; gap: 0.5rem; background: #fff; padding: 0.5rem 0.75rem; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.08);">
              <svg style="width: 20px; height: 20px;" viewBox="0 0 24 24"><path fill="#1877F2" d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
              <div style="display: flex; gap: 1px;">
                {[1,2,3,4,5].map(() => (<svg style="width: 14px; height: 14px; color: #fbbf24;" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" /></svg>))}
              </div>
              <span style="font-size: 0.8125rem; font-weight: 600; color: #333;">5.0</span>
            </div>
          </div>

          <!-- Unit Image - pushed to bottom with flex-grow spacer -->
          <div class="hero-unit-image" style="flex-grow: 1; display: flex; align-items: flex-end; margin-top: 1rem;">
            <picture>
              <source srcset="/unit-image.webp" type="image/webp" />
              <img
                src="/image 23.png"
                alt="RunTru by Trane 5-Ton Package Unit"
                style="max-width: 350px; height: auto; filter: drop-shadow(0 10px 30px rgba(0,0,0,0.25));"
              />
            </picture>
          </div>
        </div>

        <!-- Right: Form -->
        <div id="form" style="padding-bottom: 1rem;">
          <div style="background:#fff;border-radius:12px;padding:2rem;box-shadow:0 4px 20px rgba(0,0,0,0.1);">
            <h2 style="font-size:1.75rem;color:#1a1a1a;text-align:center;margin-bottom:0.5rem;">CLAIM YOUR $1,400 OFF</h2>
            <p style="color:#666;text-align:center;margin-bottom:1.5rem;font-size:1rem;">Limited inventory available</p>

            <form id="quote-form" style="display:flex;flex-direction:column;gap:0.75rem;">
              <input type="text" name="full_name" placeholder="Full Name *" required style="width:100%;padding:1rem;border:1px solid #e0e0e0;border-radius:8px;font-size:1rem;font-family:inherit;" />
              <input type="tel" name="phone" placeholder="Phone Number *" required style="width:100%;padding:1rem;border:1px solid #e0e0e0;border-radius:8px;font-size:1rem;font-family:inherit;" />
              <input type="email" name="email" placeholder="Email *" required style="width:100%;padding:1rem;border:1px solid #e0e0e0;border-radius:8px;font-size:1rem;font-family:inherit;" />
              <input type="text" name="address" placeholder="Address *" required style="width:100%;padding:1rem;border:1px solid #e0e0e0;border-radius:8px;font-size:1rem;font-family:inherit;" />

              <select name="system_age" required style="width:100%;padding:1rem;border:1px solid #e0e0e0;border-radius:8px;font-size:1rem;font-family:inherit;background:#fff;color:#666;">
                <option value="" disabled selected>How old is your current system? *</option>
                <option value="0-5 years">0-5 years</option>
                <option value="5-10 years">5-10 years</option>
                <option value="10-15 years">10-15 years</option>
                <option value="15+ years">15+ years</option>
                <option value="Not sure">Not sure</option>
              </select>

              <select name="best_time_to_call" style="width:100%;padding:1rem;border:1px solid #e0e0e0;border-radius:8px;font-size:1rem;font-family:inherit;background:#fff;color:#666;">
                <option value="" disabled selected>Best time to call?</option>
                <option value="Morning">Morning</option>
                <option value="Afternoon">Afternoon</option>
                <option value="Evening">Evening</option>
              </select>

              <div style="display:flex;align-items:flex-start;gap:0.5rem;margin-top:0.25rem;">
                <input type="checkbox" id="terms" name="terms_and_conditions" value="I Agree" required style="width:16px;height:16px;margin-top:2px;cursor:pointer;accent-color:#E42F3A;" />
                <label for="terms" style="font-size:0.8125rem;color:#666;line-height:1.4;cursor:pointer;">
                  I agree to <a href="/terms" target="_blank" style="color:#E42F3A;text-decoration:underline;">terms & conditions</a>. By providing my phone number, I agree to receive text messages from the business.
                </label>
              </div>

              <button type="submit" id="submit-btn" style="width:100%;background:#E42F3A;color:#fff;padding:1.125rem;border:none;border-radius:8px;font-size:1.125rem;font-weight:700;cursor:pointer;font-family:inherit;">
                CLAIM THIS DEAL →
              </button>

              <p style="text-align:center;color:#666;font-size:0.8125rem;margin:0.25rem 0 0;">
                ⚡ We'll call within 1 hour to confirm availability.
              </p>
            </form>

            <div id="form-success" style="display:none;text-align:center;padding:2rem 1rem;">
              <div style="width:50px;height:50px;background:#22c55e;border-radius:50%;display:flex;align-items:center;justify-content:center;margin:0 auto 1rem;">
                <svg style="width:24px;height:24px;color:#fff;" fill="none" stroke="currentColor" stroke-width="3" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
              </div>
              <h3 style="font-size:1.25rem;color:#1a1a1a;margin-bottom:0.5rem;">You're In!</h3>
              <p style="color:#666;font-size:0.9375rem;">We'll call you within 1 hour to confirm availability.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- TRUST BAR -->
    <section style="background: linear-gradient(135deg, #2C3590 0%, #1a1a4e 100%); padding: 1.5rem 0; min-height: 76px;">
      <div style="max-width: 1100px; margin: 0 auto; padding: 0 1.5rem;">
        <div style="display: flex; flex-wrap: wrap; justify-content: center; align-items: center; gap: 2rem 3rem;">
          <div style="display: flex; align-items: center; gap: 0.75rem; color: #fff;">
            <svg style="width: 28px; height: 28px; color: #fff;" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
            <span style="font-weight: 600; font-size: 1rem;">Trane Authorized Dealer</span>
          </div>
          <div style="display: flex; align-items: center; gap: 0.75rem; color: #fff;">
            <svg style="width: 28px; height: 28px;" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
            <span style="font-weight: 600; font-size: 1rem;">ROC #356015</span>
          </div>
          <div style="display: flex; align-items: center; gap: 0.75rem; color: #fff;">
            <div style="display: flex; gap: 2px;">
              {[1,2,3,4,5].map(() => (
                <svg style="width: 20px; height: 20px; color: #fbbf24;" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" /></svg>
              ))}
            </div>
            <span style="font-weight: 600; font-size: 1rem;">80+ Five-Star Reviews</span>
          </div>
          <div style="display: flex; align-items: center; gap: 0.75rem; color: #fff;">
            <svg style="width: 28px; height: 28px; color: #E42F3A;" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" /></svg>
            <span style="font-weight: 600; font-size: 1rem;">Veteran & Family Owned</span>
          </div>
        </div>
      </div>
    </section>

    <!-- OFFER BREAKDOWN -->
    <section style="background-color: #ffffff; padding: 5rem 0;">
      <div style="max-width: 1000px; margin: 0 auto; padding: 0 1.5rem;">
        <h2 style="font-size: clamp(2rem, 5vw, 3rem); color: #1a1a1a; text-align: center; margin-bottom: 3rem;">
          Here's Exactly <span style="color: #E42F3A;">What You Get</span>
        </h2>

        <div class="offer-grid" style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 2rem;">
          <!-- The System -->
          <div style="background: #f9f9f9; padding: 2rem; border-radius: 12px; border-top: 4px solid #2C3590;">
            <h3 style="font-size: 1.25rem; color: #1a1a1a; margin-bottom: 1.25rem; text-transform: none; font-family: 'Inter', sans-serif; font-weight: 700;">The System</h3>
            <ul style="list-style: none; padding: 0; margin: 0; color: #555; font-size: 1rem; line-height: 1.8;">
              <li style="display: flex; align-items: flex-start; gap: 0.5rem;">
                <svg style="width: 20px; height: 20px; color: #22c55e; flex-shrink: 0; margin-top: 2px;" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
                RunTru by Trane 5-ton package unit
              </li>
              <li style="display: flex; align-items: flex-start; gap: 0.5rem;">
                <svg style="width: 20px; height: 20px; color: #22c55e; flex-shrink: 0; margin-top: 2px;" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
                Built by one of the most trusted names in HVAC
              </li>
              <li style="display: flex; align-items: flex-start; gap: 0.5rem;">
                <svg style="width: 20px; height: 20px; color: #22c55e; flex-shrink: 0; margin-top: 2px;" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
                Factory-backed warranty
              </li>
              <li style="display: flex; align-items: flex-start; gap: 0.5rem;">
                <svg style="width: 20px; height: 20px; color: #22c55e; flex-shrink: 0; margin-top: 2px;" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
                Designed for Arizona heat
              </li>
            </ul>
          </div>

          <!-- The Install -->
          <div style="background: #f9f9f9; padding: 2rem; border-radius: 12px; border-top: 4px solid #2C3590;">
            <h3 style="font-size: 1.25rem; color: #1a1a1a; margin-bottom: 1.25rem; text-transform: none; font-family: 'Inter', sans-serif; font-weight: 700;">The Install</h3>
            <ul style="list-style: none; padding: 0; margin: 0; color: #555; font-size: 1rem; line-height: 1.8;">
              <li style="display: flex; align-items: flex-start; gap: 0.5rem;">
                <svg style="width: 20px; height: 20px; color: #22c55e; flex-shrink: 0; margin-top: 2px;" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
                Licensed, background-checked technicians
              </li>
              <li style="display: flex; align-items: flex-start; gap: 0.5rem;">
                <svg style="width: 20px; height: 20px; color: #22c55e; flex-shrink: 0; margin-top: 2px;" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
                Permit pulled (where required)
              </li>
              <li style="display: flex; align-items: flex-start; gap: 0.5rem;">
                <svg style="width: 20px; height: 20px; color: #22c55e; flex-shrink: 0; margin-top: 2px;" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
                Old unit hauled away
              </li>
              <li style="display: flex; align-items: flex-start; gap: 0.5rem;">
                <svg style="width: 20px; height: 20px; color: #22c55e; flex-shrink: 0; margin-top: 2px;" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
                Thermostat included
              </li>
            </ul>
          </div>

